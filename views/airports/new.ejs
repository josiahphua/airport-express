                <label>When open one?</label>
                <input type="text" name="opened">
            </div>
            <div class="row">
                <label>Terminal where?</label>
                <% terminals.forEach(tr=>{%>
                    <div><input type="checkbox" name="terminal" value="<%= tr._id %>"><%= tr.name %></div>
                <%})%>
            </div>
            <div class="row">
                <button class="btn" type="submit">Add FEI JI CHANG</button>
            </div>
        </form>
    </div>
</div>