<div class="container">
    <div class="col-8">

   
        <form action="/create" method="post">
            <div class="row">
                <label>Airport Name La Bro</label>
                <input type="text" name="name">
            </div>
            <div class="row">
                <label>Country Brother</label>
                <input type="text" name="country">
            </div>
